<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomAppTheme" parent="AppTheme">
        <item name="colorPrimary">#4D4B4B</item>
        <item name="colorPrimaryDark">#C9C8C8</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="CustomNavTheme" parent="AppTheme">
        <item name="colorPrimary">#022DFD</item>
        <item name="colorPrimaryDark">#A4A4A8</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="CustomVerificationTheme" parent="AppTheme">
        <item name="colorPrimary">#F3D371</item>
        <item name="colorPrimaryDark">#ECC161</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>


</resources>
